<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibili.mapper.ChatMapper">
    <select id="queryListByVideoID" resultType="Chat">
        select * from Chat where To_videoID=#{UUID}
    </select>

    <insert id="addChat" parameterType="Chat">
        insert into Chat(To_videoID,From_userID,content,video_time) values (#{To_videoID},#{From_userID},#{content},#{video_time})
    </insert>
</mapper>